

<% include ../partials/header %>
<div class="container text-center">
		<h1>Edit<%=campground.name%></h1>
		<div style="max-width:30%; margin:25px auto">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
	   			</div>
	   			<div class="form-group">
					<input class="form-control" type="number" value ="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">
	   			</div>
				<div class="form-gorup">
					<input class="form-control" type="text" value="<%=campground.image%>"  name="campground[image]">
				</div>
				<div class="form-gorup">
					<input class="form-control" style="margin:25px auto" type="text" value="<%=campground.description%>" name="campground[description]">
				</div>
					<button type="submit" class="btn btn-primary btn-lg btn-block" style="margin-top: 25px">Submit!</button>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
</div>
<% include ../partials/footer %>
