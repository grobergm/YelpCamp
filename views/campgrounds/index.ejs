<% include ../partials/header %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp</h1>
			<p>Veiw our handpicked campgrounds</p>
			<p>
				<a class="btn btn-primary btn-lg"  href="/campgrounds/new">Add new campground</a>
			</p>
		</div>
	</header>
	
	<div class="row text-center" >
		<% campgrounds.forEach(function(camp){ %>
			<div class="col-md-3 col-sm-6">
				<div class="img-thumbnail">
					<img src="<%=camp.image%>" style="max-width:100%" >
				</div>
				<div class="caption">
				<h4><%=camp.name%></h4>
				</div>
				<p>
					<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		<% }); %>
	</div>
</div>
<% include ../partials/footer %>
